@model IEnumerable<StoreFront.DATA.EF.Rarity>

@{
    ViewBag.Title = "Rarities";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RarityLevel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RarityLevel)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RarityID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id=item.RarityID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.RarityID }, new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
